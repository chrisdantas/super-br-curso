{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [
            "node"
        ]
    },
    "angularCompilerOptions": {
        "enableIvy": true,
        "allowEmptyCodegenFiles": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts"
    ]
}
